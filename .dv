#!/bin/bash
#
# Downloads videos in 720p, 480p, etc. if availible
dv() {
    if [ $# = '0' ]; then
        cat <<HELP_USAGE
Welcome to Yet Another Video Downloader!

USAGE:
    $0 <quality> <link> [localization] [extra] [another extra but in quotes]

    quality        Max quality of the video, e.g. 240, 360, etc
    link           Link of the video, the id or full name of the youtube video. see
                      yt-dlp readme for more info:
                      https://github.com/yt-dlp/yt-dlp/
    localization   Localization of the downloaded file, defaults to '~/Downloads'.

    extra          It can be used with only one option per command:
        wa             Downloads the video with the worst audio available
        nv             No video, downloads only audio
        na             No audio, downloads only video
        sub            Downloads subtitles in english and spanish
        mp4            Download video in MP4 format
    another extra
    but in quotes   again only one per command
        -c             will use --cookies ~/cookies.txt
        *timestamp     will use the timestamp from yt-dlp, nochanges here
Current Aliases:
    alias dv2="dv 240"
    alias dv3="dv 360"
    ...
    alias dv10="dv 1080"
    
    dv10vc="dv 1080" but with cookies and saved on ~/Videos

Note:
You cannot change the order of the arguments, because I'm lazy, but I accept PRs!
https://github.com/EGA-SUPREMO/dotfiles
HELP_USAGE
    else # Dont know how to exit program without closing tab when using oh my zsh
        [[ -n $ZSH_VERSION ]] && setopt LOCAL_OPTIONS SH_WORD_SPLIT

        cd ${3-~/Downloads} # Should the program go to the orginal dir after the download?

        DL_OPTS=""
        OUTPUT_TEMPLATE=""

        # --- CHECK FOR COOKIES ---
        if [[ "$4" == *"-c"* ]]; then
            DL_OPTS="$DL_OPTS --cookies ~/cookies.txt"
        fi

        local timestamp_regex='\*[0-9]+:[0-9]+'
        
        if [[ "$4" =~ $timestamp_regex ]]; then
            TIMESTAMP=$(echo "$4" | grep -o '\*[0-9:.-]*')
            DL_OPTS="$DL_OPTS --download-sections $TIMESTAMP"
            local clean_ts=$(echo "$TIMESTAMP" | tr -d '*' | tr ':' '.')
            OUTPUT_TEMPLATE="-o '%(title)s [${clean_ts}][%(id)s].%(ext)s'"
        fi

        FORMAT="-f bestvideo[height<=${1}]+bestaudio/best=[height<=${1}]"
        case $4 in
            *"mp4"*)
                FORMAT="bestvideo[ext=mp4][height<=${1}]+bestaudio[ext=m4a]/best=[ext=mp4][height<=${1}]"
                ;;
            *"wa"*)
                if [[ $3 = '~m' ]]; then
                    echo -n "are you sure you want to download a music with worstaudio? press Ctrl+C or wait 10 seconds" && sleep 10s
                fi
                FORMAT="-f bestvideo[height<=${1}]+worstaudio/best=[height<=${1}]"
                ;;
            *"sub"*)
                yt-dlp --skip-download $2 --write-sub --sub-lang en,en-GB,en-IE,es,id,id-orig --sub-format 'srt/best'
                ;;
            *"nv"*)
                FORMAT="-f bestaudio"
                ;;
            *"na"*)
                FORMAT="-f bestvideo[height<=${1}]"
                ;;
            *"th"*)
                FORMAT=$FORMAT" --write-thumbnail --embed-thumbnail"
                ;;
                
            *)
                FORMAT="-f bestvideo[height<=${1}]+bestaudio/best=[height<=${1}]"
                ;;
        esac
        
        echo "yt-dlp -R 'infinite' $DL_OPTS "$OUTPUT_TEMPLATE" $FORMAT \"$2\""
        yt-dlp -R 'infinite' $DL_OPTS "$OUTPUT_TEMPLATE" $FORMAT "$2"
    fi
}

dvasub() {
    yt-dlp --skip-download $1 --write-auto-sub --sub-lang ${2-es} --sub-format 'srt/best'
}
dvsub() {
    yt-dlp --skip-download $1 --write-sub --sub-lang ${2-'en,en-GB,en-IE,en-US,es-US,es,id,id-orig'}
    filed="`ls -rt | tail -n 1`"
    ffmpeg -i "${filed%.*}.vtt" "${filed%.*}.srt" -n
}

alias dv2="dv 240"
alias dv3="dv 360"
alias dv4="dv 480"
alias dv7="dv 720"
alias dv10="dv 1080"

# 'aliases' to download music without needing to tell the dir
dv2m() { dv2 $1 ~/Music $2; }
dv3m() { dv3 $1 ~/Music $2; }
dv4m() { dv4 $1 ~/Music $2; }
dv7m() { dv7 $1 ~/Music $2; }
dv10m() { dv10 $1 ~/Music $2; }

# 'aliases' to download videos without needing to tell the dir
dv2v() { dv2 $1 ~/Videos $2; }
dv3v() { dv3 $1 ~/Videos $2; }
dv4v() { dv4 $1 ~/Videos $2; }
dv7v() { dv7 $1 ~/Videos $2; }
dv10v() { dv10 $1 ~/Videos $2; }

# mooore aliases!
_dv2vc_run() { dv2v "$1" "-c $2" }
_dv3vc_run() { dv3v "$1" "-c $2" }
_dv4vc_run() { dv4v "$1" "-c $2" }
_dv7vc_run() { dv7v "$1" "-c $2" }
_dv10vc_run() { dv10v "$1" "-c $2" }

# 2. The alias that prevents wildcard expansion for zsh specifically
alias dv2vc="noglob _dv2vc_run"
alias dv3vc="noglob _dv3vc_run"
alias dv4vc="noglob _dv4vc_run"
alias dv7vc="noglob _dv7vc_run"
alias dv10vc="noglob _dv10vc_run"

