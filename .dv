_dv3mc_run() { dv3m "$1" "-c $2" }
_dv4mc_run() { dv4m "$1" "-c $2" }
_dv7mc_run() { dv7m "$1" "-c $2" }
_dv10mc_run() { dv10m "$1" "-c $2" }

